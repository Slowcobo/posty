<%- include('../partials/header') %> <%- include('../partials/navbar') %>
<div id="main" class="container">
  <div class="row">
    <%-include('../partials/sidebarCommunity') %>
    <div class="col">
      <h5 class="d-inline">Edit Post</h5>
      <hr />
      <div class="panel-form">
        <form
          action="/communities/<%= community._id %>/posts/<%= post._id %>?_method=PUT"
          method="POST"
        >
          <div class="form-group">
            <div class="label-container">
              <label>Post Title</label>
            </div>
            <input
              type="text"
              name="post[title]"
              value="<%= post.title %>"
              required
            />
          </div>
          <div class="form-group">
            <div class="label-container">
              <label>Post Body</label>
            </div>
            <input
              type="text"
              name="post[body]"
              value="<%= post.body %>"
              required
            />
          </div>
          <button class="btn">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
