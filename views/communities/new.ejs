<%- include('../partials/header') %> <%- include('../partials/navbar') %>
<div id="main" class="container">
  <div class="row">
    <%-include('../partials/sidebar') %>

    <div class="col">
      <h5 class="d-inline">Start a Community</h5>
      <hr />
      <div class="panel-form">
        <form action="/communities" method="POST">
          <div class="label-container">
            <label>Community Name *</label>
          </div>
          <div class="form-group">
            <input type="text" name="community[name]" />
          </div>
          <div class="form-group">
            <div class="label-container">
              <label>Community Image *</label>
            </div>
            <input type="text" name="community[image]" />
          </div>
          <div class="form-group">
            <div class="label-container">
              <label>Description *</label>
            </div>
            <textarea name="community[description]"></textarea>
          </div>
          <div class="form-group">
            <div class="label-container">
              <label>Private?</label>
              <input type="checkbox" name="community[isPrivate]" value="true" />
            </div>
          </div>
          <button class="btn">Create</button>
        </form>
      </div>
    </div>
  </div>
</div>
