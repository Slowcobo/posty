<%- include('../partials/header') %> <%- include('../partials/navbar') %>
<div id="main" class="container">
  <div class="row">
    <%- include('../partials/sidebarCommunity') %>
    <div id="post-list" class="col">
      <h5 class="d-inline">Posts</h5>
      <a
        href="/communities/<%= community._id %>/posts/new"
        class="btn btn-community"
      >
        Create a Post
      </a>
      <hr />
      <% if (community.posts.length === 0) { %>
      <p>There is nothing here.</p>
      <% } else { community.posts.forEach(post => { %>
      <div class="">
        <div class="row">
          <div class="col-1 avatar-post-large">
            <img src="<%= post.author.avatar %>" />
          </div>
          <div class="col">
            <div class="card post">
              <div class="card-body">
                <a
                  href="/communities/<%= community._id %>/posts/<%= post._id %>"
                >
                  <h5><%= post.title %></h5>
                </a>
              </div>
              <div class="card-footer">
                <small>
                  Posted X hours ago by
                  <a href="/user/<%= post.author.id %>"
                    ><%= post.author.username %></a
                  >
                  <i class="fas fa-comment"></i> <%= post.replies.length %>
                  <i class="fas fa-heart"></i> <%= post.likes %>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); }%>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
