<%- include('../partials/header') %> <%- include('../partials/navbar') %>
<div id="main" class="container">
  <div class="row">
    <%-include('../partials/sidebar') %>

    <div id="community-list" class="col">
      <h5 class="d-inline">Communities</h5>
      <a class="btn btn-community" href="communities/new">Start a Community</a>
      <hr />
      <% communities.forEach(community => { if (!community.isPrivate) { %>
      <div class="card">
        <div class="card-body">
          <a href="communities/<%= community._id %>">
            <h5 class="card-title"><%= community.name %></h5>
          </a>
          <p class="card-text">
            <%= community.description.substring(0, 100) %>...
          </p>
          <p class="card-text">
            <small class="text-muted">Tags here?</small>
          </p>
        </div>
      </div>
      <% }}); %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
