<%- include('../partials/header') %>

<div class="col">
  <h1>Edit Profile</h1>
  <form action="/user/<%= user._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input type="text" name="user[avatar]" value="<%= user.avatar %>" />
    </div>
    <div class="form-group">
      <input type="text" name="user[bio]" value="<%= user.bio %>" />
    </div>
    <button class="btn btn-primary">Save</button>
  </form>
</div>
