<%- include('./partials/header') %>

<div class="wrapper">
  <h4 id="create-description">
    Become a part of our community.
  </h4>
  <div class="card text-center panel">
    <div class="card-body">
      <h5 class="card-title">Create Your Account</h5>
      <hr />
      <form action="/register" method="POST">
        <div class="label-container">
          <label>Username *</label>
        </div>
        <div class="form-group">
          <input type="text" name="username" required />
        </div>
        <div class="label-container">
          <label>Password *</label>
        </div>
        <div class="form-group">
          <input type="password" name="password" required />
        </div>
        <button class="btn"><strong>Create Account</strong></button>
      </form>
      <hr />
      <p>Already have an account? <a href="/login">Log in</a></p>
    </div>
  </div>
  <i id="logo-small" class="fas fa-paragraph mt-5"></i>
  <span id="logo-subtext">posty</p>
</div>
